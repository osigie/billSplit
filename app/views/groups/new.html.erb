<div class="container">
  <h1>Create a new group</h1>
  <div class="row">
    <div class="col">
   
        <%= form_with model: @group,  method: :post, local: true do |f|  %>
            <div class="field form-outline mt-4 mb-4">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => 'form-control' %>
                <%= f.label :name %>
            </div>

            <div class="field form-outline mt-4 mb-4">
                <%= f.text_field :emails, autocomplete: "emails", :class => 'form-control' %>
                <%= f.label :emails %>
            </div>

            <div class="actions">
                <%= f.submit "Submit", :class => 'btn btn-primary btn-block mb-4' %>
            </div>
        <% end %>
    </div>
  </div>

</div>